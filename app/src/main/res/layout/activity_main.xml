<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/gl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"
        android:orientation="vertical"/>


    <android.support.constraint.Guideline
        android:id="@+id/gl_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.98"
        android:orientation="horizontal"/>


    <android.support.constraint.Guideline
        android:id="@+id/gl_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.02"
        android:orientation="horizontal"/>


    <ImageView
        android:id="@+id/imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_launcher_foreground"/>

    <EditText
        android:id="@+id/firstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imgView"
        app:layout_constraintStart_toStartOf="@+id/gl_1"
        app:layout_constraintEnd_toEndOf="@+id/gl_2"
        android:hint="First Name"
        android:layout_margin="10dp"
        android:inputType="text"
        android:imeOptions="actionNext"/>


    <EditText
        android:id="@+id/lastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/firstName"
        app:layout_constraintStart_toStartOf="@+id/gl_1"
        app:layout_constraintEnd_toEndOf="@+id/gl_2"
        android:hint="Last Name"
        android:layout_margin="10dp"
        android:inputType="text"
        android:imeOptions="actionNext"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lastName"
        app:layout_constraintStart_toStartOf="@+id/gl_1"
        app:layout_constraintEnd_toEndOf="@+id/gl_2"
        android:hint="Email"
        android:layout_margin="10dp"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"/>

    <EditText
        android:id="@+id/Mnumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintStart_toStartOf="@+id/gl_1"
        app:layout_constraintEnd_toEndOf="@+id/gl_2"
        android:hint="Mobile Number"
        android:layout_margin="10dp"
        android:inputType="number"
        android:imeOptions="actionDone"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Mnumber"
        app:layout_constraintStart_toStartOf="@+id/gl_1"
        app:layout_constraintEnd_toEndOf="@+id/gl_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="SAVE &amp; PROCEED"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#1997D4"
        android:textColor="#ffff"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnSave"
        app:layout_constraintStart_toStartOf="@+id/gl_1"
        app:layout_constraintEnd_toEndOf="@+id/gl_2"
        android:layout_margin="20dp"
        android:background="#1997D4"
        android:textColor="#ffff"
        android:text="NEXT PAGE"/>










</android.support.constraint.ConstraintLayout>